<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowDoMilhao.MainPage">

    <StackLayout>
        <Button Text="Sortear Fácil" Clicked="Button_Clicked" />

        <Label Text="{Binding Enunciado}" />

        <RadioButton Content="{Binding Path=Alternativas[0].Descricao}" />
        <RadioButton Content="{Binding Path=Alternativas[1].Descricao}" />
        <RadioButton Content="{Binding Path=Alternativas[2].Descricao}" />
        <RadioButton Content="{Binding Path=Alternativas[3].Descricao}" />

        <StackLayout Orientation="Horizontal">
            <Button Text="Parar" />
            <Button Text="Próxima" Clicked="Button_Clicked_Proxima" />
        </StackLayout>
        
    </StackLayout>
</ContentPage>
